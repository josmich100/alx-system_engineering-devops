# /etc/haproxy/haproxy.cfg

# Global settings
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

# Defaults
defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

# Frontend configuration for SSL termination
frontend www-https
    bind *:443 ssl crt /etc/haproxy/certs/www.yourdomain.com.pem
    reqadd X-Forwarded-Proto:\ https

    acl is_root path -i /
    use_backend www-backend if is_root

# Backend configuration
backend www-backend
    balance roundrobin
    server web-01 107.23.109.35:80 check
    server web-02 3.85.54.206:80 check
